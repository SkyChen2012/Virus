<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/game_agilebuddy_bg_tips"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="100dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="50dip">

        <TextView
            android:id="@+id/tips_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/game_agilebuddy_tips_text"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dip"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/touch_to_start"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:text="@string/game_agilebuddy_touch_to_start"
                android:textColor="#FF292066"
                android:textSize="17sp" />
            <!--<com.admob.android.ads.AdView-->
            <!--android:id="@+id/adbar3" android:layout_width="fill_parent"-->
            <!--android:layout_height="50dip" android:layout_alignParentBottom="true"-->
            <!--admobsdk:backgroundColor="#000000" admobsdk:primaryTextColor="#FFFFFF"-->
            <!--admobsdk:secondaryTextColor="#CCCCCC" admobsdk:keywords="Android game video discount"-->
            <!--admobsdk:refreshInterval="60" />-->
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>